
editor.colorscheme = $(echo monokai)

editor.show_line_numbers = True
editor.show_relative_numbers = True
editor.expandtabs = True
editor.tabstop = 4
editor.display_unprintable_characters = True

# Enable nerd fonts
editor.use_nerd_fonts = True

# Change default terminal
# If set to something else other than bash, setting the cursor to be on the next line is recommended (e.g for xnosh)
editor.terminal = "/bin/bash"

# Configure lsp

editor.lsp.add_server(language_id="python", extensions=[".py"], command="pylsp", args=[])